Algoritmo Operaciones
	Escribir "Escribir el número 1"
	Leer N1
	Escribir "Escribir el número 2"
	Leer N2
	Escribir "Escribir el operador"
	Leer Opciones
	Segun Opciones Hacer
		1:
			Escribir "SUMA: ", (N1+N2)
		2:
			Escribir "RESTA: ", (N1-N2)
		3:
			Escribir "MULTIPLICACIÓN: ", (N1*N2)
		4:
			Escribir "DIVISIÓN: ", (N1/N2)
		De Otro Modo:
			Escribir "No se encontró opción valida "
	Fin Segun
FinAlgoritmo
